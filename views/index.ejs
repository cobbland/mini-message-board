<!DOCTYPE html>
<html lang="en">
    <%- include('head', { title: title }) %>
    <body>
        <div class="content">
            <h1><%= title %></h1>
            <a href="/new"><button>New Message</button></a>
            <ul class="messages">
                <% messages.forEach((message) => { %>
                    <li>
                        <div class="message">
                            <p>"<%= message.text %>"</p>
                            <p>
                                Posted by <span class="name"><%= message.user %></span> on
                                <a href="/message?id=<%= message.id %>"><%= message.added %></a>
                            </p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>
        <%- include('footer') %>
    </body>
</html>
