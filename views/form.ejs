<!DOCTYPE html>
<html lang="en">
    <%- include('head', { title: title }) %>
    <body>
        <div class="content">
            <h1><%= title %></h1>
            <form method="POST" action="/new" id="message-form">
                <div>
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name">
                </div>
                <div>
                    <label for="message">Message</label>
                    <textarea name="message" id="message"></textarea>
                </div>
                <input type="hidden" name="id" id="id" value="<%= nextId %>">
            </form>
            <div class="buttons">
                <input type="submit" value="Post" class="button" form="message-form">
                <a href="/"><button class="button">Back</button></a>
            </div>
        </div>
        <%- include('footer') %>
    </body>
</html>
